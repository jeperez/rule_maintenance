#set($pagetitle='List of Methods')
#set($layout="eng/layout_logic.vm")
<p class="heading">List of Methods ($methods.size()) for Action: ${action.methoddisplayname} - ${action.description}</p>

<table border="0" width="100%">
	<tr class="light">
		<td width="27%">Mandatory: Field or Parameter(s)</td>
		<td width="20%">optional Parameter</td>
		<td width="20%">optional Parameter</td>
		<td width="20%">optional Parameter</td>
		<td width="13%">Field to update</td>
	<tr>
	#set($counter=0)
	#foreach($method in $methods)
		#if($counter %2 ==0)
			<tr>
		#else
			<tr class="light2">
		#end
		<td>$!{method.methodTypes}</td>
		#if($!{method.optionalType1})
			<td>$!{method.optionalType1} - $!{method.optionalType1Explanation}</p>
		#else
			<td></td>
		#end
		#if($!{method.optionalType2})
			<td>$!{method.optionalType2} - $!{method.optionalType3Explanation}</p>
		#else
			<td></td>
		#end
		#if($!{method.optionalType3})
			<td>$!{method.optionalType3} - $!{method.optionalType3Explanation}</p>
		#else
			<td></td>
		#end
		#if($!{method.returnType})
			<td>${method.returnType}</td>
		#else
			<td></td>
		#end
		</tr>
		#set($counter=$counter +1)
	#end
</table>

